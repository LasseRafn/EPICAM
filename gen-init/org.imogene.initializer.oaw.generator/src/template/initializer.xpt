		defaultUser.addSynchronizable(fieldGroupProfile);
		defaultUser.addSynchronizable(profile);
		defaultUser.addSynchronizable(binary);
		«FOREACH entities AS e-»
		defaultUser.addSynchronizable(«e.name.toFirstLower()»);
		«ENDFOREACH-»
		save(defaultUser);
